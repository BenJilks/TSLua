{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": [
            "warn",
            4,
            { 
                "SwitchCase": 1,
                "FunctionExpression": {
                    "parameters": "first"
                },
                "FunctionDeclaration": {
                    "parameters": "first"
                }
            }
        ],
        "linebreak-style": [
            "warn",
            "unix"
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "semi": [
            "warn",
            "never"
        ],
        "template-curly-spacing": [
            "warn",
            "always"
        ],
        "brace-style": [
            "warn",
            "allman",
            { "allowSingleLine": true }
        ],
        "comma-dangle": [
            "warn", 
            "always-multiline"
        ],
        "key-spacing": [
            "warn", {
                "beforeColon": false,
                "afterColon": true,
                "mode": "strict"
            }
        ],
        "object-curly-spacing": [
            "warn",
            "always",
            { "objectsInObjects": true }
        ],
        "@typescript-eslint/no-unused-vars": [
            "warn",
            { 
                "argsIgnorePattern": "^_",
                "destructuredArrayIgnorePattern": "^_"
            }
        ]
    }
}
